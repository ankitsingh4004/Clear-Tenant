<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:orientation="vertical"
    tools:context="com.example.admin.workorderlandlord.Activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageWork"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/logoicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageWork"
        android:text="Welcome! Login To Your Account "
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"/>
    </RelativeLayout>


    <EditText
        android:id="@+id/user_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="5dp"
        android:textColor="#fbffffff"
        android:drawableLeft="@drawable/personicon"
        android:textColorHint="#fff"
        android:layout_centerInParent="true"
        android:hint="Username"
        android:background="@drawable/loginshape"/>

    <EditText
        android:id="@+id/user_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/passwordlock"
        android:textColorHint="#fff"
        android:textColor="#ffffff"
        android:inputType="textWebPassword"
        android:layout_below="@+id/user_id"
        android:paddingLeft="5dp"
        android:layout_centerInParent="true"
        android:hint="Password"
        android:background="@drawable/loginshape"/>

    <LinearLayout
        android:id="@+id/forget_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:layout_below="@+id/user_password"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/forgotpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:gravity="right"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <Button
        android:id="@+id/signIn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/forget_lay"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Login"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/DisPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:visibility="invisible"
        android:layout_below="@+id/RLRegistration"
        android:textColor="@color/list_color"
        android:text="TextView" />

    <RelativeLayout
        android:id="@+id/RLRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signIn"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tvRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration?"
            android:textColor="#fff"
            android:fontFamily="serif"
            android:textSize="18sp" />

    </RelativeLayout>




</RelativeLayout>

